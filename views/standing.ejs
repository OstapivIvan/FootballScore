<% if (typeof league !== 'undefined' && typeof standings !== 'undefined' && standings.length > 0) { %>
    <div>
        <% standings.forEach(groupStanding => { %>
            <table>
                <% if(groupStanding.group.group)  { %>
                <span style="font-size: 24px; color: black; background-color: aliceblue; padding: 2px; margin: 2px 0;"><%= groupStanding.group.group %></span>
                <% } %>
                <tr>
                    <th>â„–</th>
                    <th style="width: 300px;">Team</th>
                    <th>Played</th>
                    <th>Won</th>
                    <th>Draw</th>
                    <th>Lost</th>
                    <th>GF</th>
                    <th>GA</th>
                    <th>GD</th>
                    <th>Points</th>
                </tr>

                <% groupStanding.table.forEach(team => { %>
                    <tr>
                        <td><%= team.position %></td>
                        <td class="team-info">
                                <img class="crest" src="<%= team.team.crest %>" alt="Team Crest">
                                <span><%= team.team.name %></span>
                        </td>
                        <td><%= team.playedGames %></td>
                        <td><%= team.won %></td>
                        <td><%= team.draw %></td>
                        <td><%= team.lost %></td>
                        <td><%= team.goalsFor %></td>
                        <td><%= team.goalsAgainst %></td>
                        <td><%= team.goalDifference %></td>
                        <td><%= team.points %></td>
                    </tr>
                <% }); %>

            </table>
    
        <% }); %>
    </div>
<% } else { %>
    <p>No standings data available.</p>
<% } %>
